@model List<Actividad4LengProg3.Models.CarreraViewModel>

@{
    ViewBag.Title = "Lista de Carreras";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Listado de Carreras</h2>

    <div class="text-end mb-3">
        <a href="@Url.Action("Crear", "Carreras")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nueva Carrera
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No hay carreras registradas.
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Código</th>
                    <th>Nombre Carrera</th>
                    <th>Cant. Créditos</th>
                    <th>Cant. Materias</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var carrera in Model)
                {
                    <tr>
                        <td>@carrera.Codigo</td>
                        <td>@carrera.NombreCarrera</td>
                        <td>@carrera.CantidadCreditos</td>
                        <td>@carrera.CantidadMaterias</td>
                        <td>
                            <a href="@Url.Action("Editar", "Carreras", new { codigo = carrera.Codigo })" class="btn btn-primary btn-sm">Editar</a>
                            <a href="@Url.Action("Eliminar", "Carreras", new { codigo = carrera.Codigo })" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
