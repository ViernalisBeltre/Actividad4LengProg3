@model IEnumerable<Actividad4LengProg3.Models.EstudianteViewModel>

@{
    ViewBag.Title = "Lista de Estudiantes";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Lista de Estudiantes</h2>
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">@TempData["Mensaje"]</div>
    }

    <div class="text-end mb-3">
        <a href="@Url.Action("Index", "Estudiantes")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Estudiante
        </a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Matrícula</th>
            <th>Carrera</th>
            <th>Recinto</th>
            <th>Correo</th>
            <th>Beca</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.NombreCompleto</td>
                <td>@e.Matricula</td>
                <td>@e.Carrera</td>
                <td>@e.Recinto</td>
                <td>@e.CorreoInstitucional</td>
                <td>@(e.EstaBecado ? $"{e.PorcentajeBeca}%" : "No")</td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { matricula = e.Matricula }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Eliminar", "Eliminar", new { matricula = e.Matricula }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
