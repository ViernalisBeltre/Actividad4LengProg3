@model Actividad4LengProg3.Models.RecintoViewModel

<h2>Registrar Recinto</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Codigo)
        @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Codigo)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NombreRecinto)
        @Html.TextBoxFor(m => m.NombreRecinto, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NombreRecinto)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DireccionRecinto)
        @Html.TextBoxFor(m => m.DireccionRecinto, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DireccionRecinto)
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a href="@Url.Action("Lista")" class="btn btn-secondary">Volver</a>
}
